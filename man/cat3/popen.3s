       #iinncclluuddee <_s_t_d_i_o._h>

       FFIILLEE *ppooppeenn(_c_o_m_m_a_n_d, _t_y_p_e)
       cchhaarr *_c_o_m_m_a_n_d, *_t_y_p_e;

       ppcclloossee(_s_t_r_e_a_m);
