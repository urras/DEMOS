}

yywrap()
{
	return(1);
}

msgfiles()
{       char buf[512], *p, *q, **s;
	int n;
	n=read(filefd, buf, 512);
	if (n<=0)       /*no one at other end?*/ {
		fprintf( stderr, ediag( "i/o error %d",
					"ошибка в/в %d"), errno );
		exit(errno);
	}
	xfree(filelist);
	q=filelist=malloc(n);
	for (p=buf; *p==' ' || *p=='\t' || *p=='\n'; p++);
	for (n=0; *p!=';'; )
	{
		if (*p==' ' || *p=='\t' || *p=='\n') {
			n++;
			*q++=0;
			while (*p==' ' || *p=='\t' || *p=='\n')
				p++;
		}
		else    *q++ = *p++;
	}
	if (q!=filelist && *(q-1)!=0) {
		n++;
		*q++ = 0;
	}
	svargc=n;
	xfree(xargv);
	xargv=s=svargv=malloc(n*sizeof(char *));
	for (p=filelist; n>0; n--)
	{
		*s++=p;
		while (*p++ != 0);
	}
}
