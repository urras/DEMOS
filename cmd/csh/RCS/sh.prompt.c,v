/*
 * C Shell.
 *
 * Print out prompt.
 *
 * $Log:	sh.prompt.c,v $
 * Revision 1.4  89/06/07  18:24:42  root
 * Исправлена перерисовка, более аккуратная работа с буфером
 * 
 * Revision 1.3  89/05/03  21:51:21  avg
 * Сделана подстановка переменных в prompt.
 * 
 * Revision 1.2  89/03/16  12:12:46  avg
 * Внесены изменения для экранной версии csh.
 *
 * Revision 1.1  89/03/05  19:29:43  avg
 * Initial revision
 *
 */

# include "sh.h"

# define DEOF -1
# define MAXPBUF 128

extern int m_prompt;
extern int pprompt;

char   pbuf[MAXPBUF];

       extern int ScrFlag;
       extern int InitFlag;
       extern int raw_tty;
       extern int sc_width;
       extern int col;
       extern int max_col;


int WasSignaled;

putprompt()
{
	int     cp;
	char    *pcp, *tcp;
	unsigned line, j;
	char    evno[20];
	extern int closein;
	extern TermInitFlag, TCQuiet;

	if(closein)
	    return;
	col = 0;

	if( !TermInitFlag ) {
	    TCQuiet = !adrof("shistory");
	    get_term();
	    TCQuiet = 0;
	}
	if( !InitFlag && ScrFlag ) {
	    if( ScrFlag == 0 )
		goto PutPrompt;
	    inihist();
	    InitFlag = 1;
	    max_col = sc_width;
	}
	if( !raw_tty && ScrFlag ) {
	    set_mode();
	    raw_tty = 1;
	}
	if( ScrFlag ) {
		 /* ---- Reset prompt to a new line ---- */
		if(WasSignaled)
			resetln();
		WasSignaled = 0;
	}

PutPrompt:
	if( m_prompt ) {
		tcp = pbuf;
		for ( pcp = value("prompt"); *pcp && tcp < MAXPBUF+pbuf-1; pcp++ ) {
			if (*pcp == HIST) {
				line = eventno+1;
				for( j = 0 ; line > 0 ; line /= 10 )
					evno[j++] = (line%10) + '0';
				while( j-- > 0 )
					*tcp++ = evno[j];
			} else {
				if (*pcp == '\\' && pcp[1] == HIST )
				       pcp++;
				*tcp++ = *pcp;
			}
		}
		*tcp = 0;
		pprompt = pbuf;
		for ( ;; ) {
			cp = DgetC(1);
			if( cp == DEOF || cp == 0 )
				break;
			PutChar( (char)(cp&0377) );
			col ++;
		}
		pprompt = 0;

	} else {                /* m_prompt == 0 */
		 PutChar('?');
		 PutChar(' ');
		 col = 2;
	}
EXIT:
	FlushOut();
	if( !ScrFlag )
	    return;
	max_col = sc_width;
	return;
}

PutEChar( cp )
char cp;
{
	extern int lc_tty;      /* UPPER-CASE ONLY TERMINAL */
	extern int ucase_flag;  /* \U\C\A\S\E mode is on - operates only on uc-only-ttys */

	if( ucase_flag )
		cp = (cp >= 'A' && cp <= 'Z') ? cp + 040 :
		     ((cp > 0137 && cp < 0173) ? cp + 0140 : cp);
	if( lc_tty )
		cp = (cp > 0172 && cp < 0177) ? cp + 0140 : cp;
	PutChar( (int)cp );
}

#include <time.h>

/*
 * Handle _time variable substitution
 */
SetCurrentTime()
{
	struct tm *t, *localtime();
	long ty;
	char *ts;

	ts = value("_time");
	if( ts == (char*)0 )
		return;

	time(&ty);
	t = localtime(&ty);

	ts[0] = '0' + t->tm_hour/10;
	ts[1] = '0' + t->tm_hour%10;

	ts[3] = '0' + t->tm_min/10;
	ts[4] = '0' + t->tm_min%10;

	ts[6] = '0' + t->tm_sec/10;
	ts[7] = '0' + t->tm_sec%10;
}

/*
 * Initial setting for _time variable
 */
InitialTimeSet()
{
	/*NOXSTR*/
	setquoted("_time", "00:00:00");
	/*YESXSTR*/
	SetCurrentTime();
}
