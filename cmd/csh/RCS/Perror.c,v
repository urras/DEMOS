perror(s)
char *s;
{
	register char *c, *q;
	char buf[60], fmt[8];

	c = ediag("Unknown error","неизвестная ошибка");
	if(errno < (sizeof sys_errlist/sizeof sys_errlist[0]))
		c = ediag(sys_errlist[errno],sys_rerrlist[errno]);
	q = buf;
	while( *q++ = *c++ );
	q = fmt;
	c = "%s: %s\n";
	while( *q++ = *c++ );
	printf(fmt, s, buf);
}
