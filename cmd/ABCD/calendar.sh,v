desc
@
Командный файл для запуска calendar по всем пользователям.
@


1.5
log
@При посылке mail добавляется поле Subject:
@
text
@#!/bin/sh
# $Header: calendar.sh,v 1.5 89/01/17 15:50:24 ache Exp $
PATH=/bin:/usr/bin
CPP=/lib/cpp
tmp=/tmp/cal0$$
tmp1=/tmp/cal1$$
trap "rm -f $tmp $tmp1; exit" 0 1 2 13 15
/usr/lib/calendar > $tmp
case x$1 in
x-)
	sed '
		s/\([^:]*\):.*:\(.*\):[^:]*$/y=\2 z=\1/
	' /etc/passwd \
	| while read x
	do
		eval $x
		if test -r $y/calendar; then
			$CPP -C $y/calendar 2>/dev/null | sed -f $tmp > $tmp1
			if test -s $tmp1; then
				echo 'Subject:  calendar: output' | cat - $tmp1 | mail $z
			fi
		fi
	done;;
x)
	$CPP -C calendar | sed -f $tmp;;
*)
	$CPP -C $1 | sed -f $tmp;;
esac
exit 0
@


