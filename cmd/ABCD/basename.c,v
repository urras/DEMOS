1.2
log
@Для совместимости с System V сделана еще и команда dirname.
@
text
@/*
**
** Эта штука добавляется в исходный файл перед
** запуском rcs               Давидов 04.28.88
**
** $Header: basename.c,v 1.1 88/05/03 20:21:31 root Exp $
** $Log:        basename.c,v $
 * Revision 1.1  88/05/03  20:21:31  root
 * Initial revision
 *
*/

# ifndef        lint
/* NOXSTR  */
static char     Rcs_id[] = "$Header: basename.c,v 1.1 88/05/03 20:21:31 root Exp $";
/* YESXSTR */
# endif         lint

#include   <stdio.h>
#include   <ediag.h>

main(argc, argv)
char **argv;
{
	register char *p1, *p2, *p3;

	if (argc < 2) {
		putchar('\n');
		exit(1);
	}
	p1 = argv[0];
	p2 = p1;
	while(*p1) {
		if (*p1++ == '/')
			p2 = p1;
	}
	if( *p2 == 'd' ) {      /* DIRNAME */
		if( argc > 2 ) {
			fputs(ediag("Usage: ", "Вызов: "), stderr);
			fputs(argv[0], stderr);
			fputs(ediag(" name\n", " имя\n"), stderr);
			exit(2);
		}
		p1 = argv[1];
		p2 = p1;
		while (*p1) {
			if (*p1 == '/')
				p2 = p1;
			p1++;
		}
		if( p2 == argv[1] )
			p2 = (*p2 == '/')? "/": ".";
		else {
			*p2 = '\0';
			p2 = argv[1];
		}
		goto output;
	}

	/* BASENAME */

	if( argc > 3 ) {
		fputs(ediag("Usage: ", "Вызов: "), stderr);
		fputs(argv[0], stderr);
		fputs(ediag(" name [suffix]\n", " имя [суффикс]\n"), stderr);
		exit(2);
	}

	p1 = argv[1];
	p2 = p1;
	while (*p1) {
		if (*p1++ == '/')
			p2 = p1;
	}

	if (argc>2) {
		for(p3=argv[2]; *p3; p3++)
			;
		while(p1>p2 && p3>argv[2])
			if(*--p3 != *--p1)
				goto output;
		*p1 = '\0';
	}
output:
	puts(p2);
	exit(0);
}
@


