desc
@
Makefile для программы tar.
@


1.3
log
@???
@
text
@#
#      ЛЕНТОЧНЫЙ АРХИВ
#

I       = /usr/include
IS      = /usr/include/sys
SRC     = tar.c
DESTDIR = /bin
LDFLAGS = -s
CCFLAGS = -O
CC      = cc

all:            tar

install:        i_tar

i_tar:          tar
	rm -f $(DESTDIR)/tar
	cp tar $(DESTDIR)/tar
	chmod 755 $(DESTDIR)/tar

tar:     $(I)/ediag.h $(I)/stdio.h $(I)/signal.h $(I)/setjmp.h
tar:     $(IS)/dir.h $(IS)/stat.h $(IS)/types.h $(IS)/mtio.h $(SRC)
		xstr tar.c
		$(CC) -c $(CFLAGS) x.c
		-rm -f x.c
		$(CC) -S $(CFLAGS) xs.c
		-rm -f xs.c
		sed "s/^\.data/.text/" xs.s > xy.s
		-rm -f xs.s
		cc $(LDFLAGS) xy.s x.o -o tar
		-c7t10 tar
		-rm -f x.o xy.s xy.o

clear clean:
	-rm -f *.[ob] tar x.c xs.c xs.s xy.s
@


1.2
log
@Вставлена зависимость от include-file <sys/mtio.h> .
@
text
@a3 5
#      $Log:    Makefile,v $
# Revision 1.1  86/07/02  11:25:54  mike
# Initial revision
#
#
a4 4
R       =
COFLAGS =
CIFLAGS = -u -q
RCS     = RCS
d9 3
a11 2
LDFLAGS = -s -n
CFLAGS  = -O
d22 2
a23 2
tar:     $(I)/ediag.h $(I)/stdio.h $(I)/signal.h $(I)/setjmp.h \
	 $(IS)/dir.h $(IS)/stat.h $(IS)/types.h $(IS)/mtio.h $(SRC)
d32 1
a34 12
source: $(SRC)

$(R)tar.c:     $(RCS)/tar.c,v    ;      co $(COFLAGS) tar.c
$(R)Makefile:  $(RCS)/Makefile,v ;      co $(COFLAGS) Makefile

Revision:       .revision

.revision:      $(SRC) Makefile
		rcs -l $?
		ci $(CIFLAGS) $?
		date > .revision

d36 1
a36 4
	-$(DESTDIR)/rm -f *.[ob] tar x.c xs.c xs.s xy.s

CLRSRC: clean
	-rm -f $(SRC) .revision
@


