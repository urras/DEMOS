#ifndef lint
static char rcsid[] = "$Header: lpq.c,v 1.5 87/01/06 10:43:41 avg Exp $";
#endif

#include <dir.h>
#include <stdio.h>
#include <ediag.h>
#include "lpspool.h"
int total;

/*
 * Подпрограмма сравнения двух входов каталога
 */
dc( d1, d2 )
struct direct *d1, *d2;
{
	return( strncmp( d1->d_name, d2->d_name, DIRSIZ ) );
}

struct  LP_SPOOL lck[20];       /* Содержимое lock-файла */

/*
 * Главная программа - читает каталог спулинга, файл состояния
 * спулинга и сортирует файлы спулинга.
 */
main()
{
	int     spd;
	long    lseek();
	unsigned  dsize;
	struct direct *d, *pd, *qd;
	struct LP_QUEUE lpq;

	if( (spd = open( LP_DIR, 0 )) < 0 )
		error( "Can't read spool directory",
		       "Не могу прочитать каталог спулинга", NULL );
	dsize = (unsigned)lseek( spd, 0l, 2 );
	lseek( spd, 0l, 0 );
	if( (d = malloc( dsize )) == NULL )
		error( "Not enough core",
		       "Не хватает памяти", NULL );
	read( spd, d, dsize );
	close( spd );
	for( pd = d, qd = d ; pd < (struct direct *)((char *)d + dsize) ; pd++ )
		if( pd->d_ino != 0 && pd->d_name[0] == 'H' )
			*qd++ = *pd;

	if( qd == d ) {
		printf( ediag( "No spool files\n",
			       "Нет файлов в спулинге\n" ));
		exit(0);
	}


	qsort( d, qd-d, sizeof(struct direct), dc );

	if( (spd = open(LP_LOCK, 0)) >= 0 ) {
		read( spd, lck, sizeof lck );
		close( spd );
	}

	printf( ediag(
"LP      User      File                    S   Pages   Printed    Spool file\n",
"LP      Польз.    Файл                    S   Листов  Напечатано Файл спул.\n" ));

	chdir( LP_DIR );
	for( pd = d; pd < qd ; pd++ ) {
		if( (spd = open( pd->d_name, 0 )) < 0 )
			continue;
		if( read( spd, &lpq, sizeof lpq ) == sizeof lpq )
			prt( &lpq, pd->d_name );
		close( spd );
	}
	printf( ediag("Total %d pages.\n","Всего %d листов.\n"), total );
}

/*
 * Печатать один элемент таблицы
 */
prt( l, hname )
struct LP_QUEUE *l;
char *hname;
{
	register int i;
	char *rindex();
	register char *p;
	char     *ms;

	if( l->lpq_ncopy == 0 )
		return;

	switch( l->lpq_xflags & (XF_MAIL|XF_WRITE) ) {
	    case 0:
		ms = "  ";
		break;
	    case XF_MAIL:
		ms = "m ";
		break;
	    case XF_WRITE:
		ms = "w ";
		break;
	    case XF_WRITE|XF_MAIL:
		ms = "wm";
	}

	printf( "%-7.7s %-9.9s ", l->lpq_printer, l->lpq_user );

	if( strlen( l->lpq_filename ) > 23 )
		printf( ".../%-19s ", rindex( l->lpq_filename, '/' ) + 1 );
	else
		printf( "%-23.23s ", l->lpq_filename );

	if( lck[l->lpq_slot].lps_pid != 0 &&
	    !strcmp( lck[l->lpq_slot].lps_file, hname ) ) {
		printf( "P%s", ms );
		if( l->lpq_ncopy != 1 )
			printf( (l->lpq_xflags & XF_NOSPOOL)? "%3d*???  "
							    : "%3d*%-3d  ",
				l->lpq_ncopy, l->lpq_npages );
		else
			printf( (l->lpq_xflags & XF_NOSPOOL)? "   ???   "
							    : " %5d  ",
				 l->lpq_npages );

		printf( "%4d        " , lck[l->lpq_slot].lps_pages );
	} else {
		printf( "%c%s", (l->lpq_xflags & XF_NOSPOOL)? 'N': 'W', ms);
		if( l->lpq_ncopy != 1 ) {
			printf( (l->lpq_xflags & XF_NOSPOOL)? "%3d*???              "
							    : "%3d*%-3d              ",
				l->lpq_ncopy, l->lpq_npages );
		} else {
			printf( (l->lpq_xflags & XF_NOSPOOL)? "   ???               "
							    : " %5d              ",
				 l->lpq_npages );
		}
	}
	total += (l->lpq_npages) * (l->lpq_ncopy);

	p = l->lpq_spoolfile + 1;
	while( *p == '0' )
		*p++ = ' ';
	printf( "%6.6s", l->lpq_spoolfile + 1 );
	p = l->lpq_spoolfile + 7;
	if( *p != 'A' ) {
		putchar( *p | 040 );
		putchar( *++p | 040 );
	} else if( *++p != 'A' )
		putchar( *p | 040 );
	putchar( '\n' );
}

/*
 * Выдача сообщения об ошибке
 */
error( e, r, a )
{
	fprintf( stderr, ediag(e, r) );
	if( a != NULL )
		fprintf( stderr, "%s\n", a );
	else
		fprintf( stderr, "\n" );
	exit(1);
}
