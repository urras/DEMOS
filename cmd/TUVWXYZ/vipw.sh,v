@#! /bin/sh
# $Header$
# $Log$
#
cp /dev/null /etc/vipw.lock
chmod 0 /etc/vipw.lock
ln /etc/vipw.lock /etc/ptmp > /dev/null 2>& 1
case $? in
0)
	trap '' 1 2 3 15
	red /etc/passwd
	rm  /etc/ptmp
	;;
*)
	if [ '(' $MSG"" = l ')' -o '(' -z $MSG"" ')' ]
	then echo 'Temporary file busy, try again later.'
	elif [ $MSG"" = r ]
		then echo "Файл passwd занят."
	fi
	;;
esac
@
