S = $(SRCS) $(HDRS)
a95 1
	-strip Mail
d97 1
a101 1
	-strip mail
d103 1
d109 3
a111 16
EXOBJS=ctime.o mktemp.o qsort.o perror.o fseek.o malloc.o \
       fdopen.o calloc.o atoi.o getenv.o stty.o ungetc.o

Omail:  $S $(OBJS) ${EXOBJS}
	$(RM) -f Mail Omail
	@@echo Loading ...
	@@ld -X /lib/crt0.o -n -o Omail \
	-Z      fio.o ${EXOBJS} \
	-Z      names.o aux.o quit.o \
	-Z      getname.o cmd2.o cmd3.o edit.o \
	-Z      optim.o popen.o send.o strings.o temp.o \
		v7.local.o vars.o \
	-Z      lex.o list.o lock.o main.o tty.o \
	-Z      head.o cmd1.o collect.o ${SIGRETROOBJ} \
	-L      cmdtab.o config.o \
		str.o  ${LIBES}
d113 1
d115 1
a115 4
${EXOBJS}: ${LIBC}
	ar x $(LIBC) ${EXOBJS}

Smail:  $S $(OBJS)
d118 1
a118 1
	@@${CC} -i ${OBJS} -o Smail
d122 1
a122 1
Vmail:  $S $(OBJS)
d125 1
a125 1
	@@${CC} -n ${OBJS} -o Vmail
@


