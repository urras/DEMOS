head     1.3;
access   korotaev;
symbols  ;
locks    ;
comment  @# @;


1.3
date     88.09.14.14.38.51;  author korotaev;  state Exp;
branches ;
next     1.2;

1.2
date     88.07.20.11.45.16;  author ache;  state Exp;
branches ;
next     1.1;

1.1
date     88.07.09.16.45.30;  author root;  state Exp;
branches ;
next     ;


desc
@
Проверка на наличие скрытых нарушений защиты.
@


1.3
log
@Несколько изменен PATH.
@
text
@#!/bin/sh
# by @@VG
#
# $Header: chsec.sh,v 1.2 88/07/20 11:45:16 ache Exp $
# $Log:	chsec.sh,v $
# Revision 1.2  88/07/20  11:45:16  ache
# Установка PATH и исправление trap
# 
# Revision 1.1  88/07/09  16:45:30  root
# Initial revision

PATH=/bin:/etc:/usr/bin
SF=/etc/secure.files
t1=/tmp/.CSQ1$$
t2=/tmp/.CSQ2$$
trap "rm -f $t1 $t2; exit 2" 1 2 15
m=${MSG-e}
if [ ! -t 2 ]
then
	m=Z
fi
exitcode=1
umask 077
mount | while read disk dummy xdir
do
    dir=$xdir
    case $dir in
    /)  dir="";;
    esac
    disk=/dev/r$disk
    case $m in
    Z) ;;
    r) echo 1>&2 "Проверка $disk (смонтирован к $xdir)" ;;
    *) echo 1>&2 "Checking $disk (mounted on $xdir)"    ;;
    esac
    /etc/ncheck -s $disk | expand | sed -n 's?.*  *?'$dir'?p' >> $t1
done
if [ -r $SF ]
then
	sort $t1 > $t2
	sort $SF | comm -13 - $t2 > $t1
	if [ -s $t1 ]
	then
		case $m in
		r) echo "Нет в списке привилегированных программ:" ;;
		*) echo "Not in secure list:" ;;
		esac
		cat $t1
		exitcode=0
	else
		case $m in
		Z) ;;
		r) echo "Скрытых нарушений защиты не обнаружено" ;;
		*) echo "Not found hidden security holes" ;;
		esac
	fi
	sort $SF | comm -23 - $t2 > $t1
	if [ -s $t1 ]
	then
		cat /dev/null > $t2
		cat $t1 | while read filename
		do
			if [ -f "$filename" ]
			then
				echo "$filename" >> $t2
			fi
		done
		if [ -s $t2 ]
		then
			case $m in
			r) echo "Потерян бит set-UID на программах:" ;;
			*) echo "Lost set-UID for programs:" ;;
			esac
			cat $t2
			exitcode=0
		fi
	fi
else
	case $m in
	Z) ;;
	r) echo 1>&2 "Предупреждение: нет файла" $SF ;;
	*) echo 1>&2 "Warning: no file" $SF          ;;
	esac
	sort $t1
fi
rm -f $t1 $t2
exit $exitcode
@


1.2
log
@Установка PATH и исправление trap
@
text
@d4 1
a4 1
# $Header: chsec.sh,v 1.2 88/07/19 21:00:52 root Exp $
d6 3
d12 1
a12 1
PATH=/bin:/etc:/usr/bin:/usr/ucb
@


1.1
log
@Initial revision
@
text
@d4 6
a9 3
# $Header$
# $Log$
#
d13 1
a13 1
trap "rm -f $1 $2; exit 2" 1 2 15
@
