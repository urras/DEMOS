1.6
log
@Улушенеа диагностика.
@
text
@/*
**
** Эта штука добавляется в исходный файл перед
** запуском rcs               Давидов 04.28.88
**
** $Header: mknod.c,v 1.5 89/01/03 16:45:04 korotaev Exp $
** $Log:	mknod.c,v $
 * Revision 1.5  89/01/03  16:45:04  korotaev
 * В одной строке - три ошибки !!!
 * 
 * Revision 1.4  89/01/02  17:43:36  korotaev
 * Мелочи, но нужные.
 *
 * Revision 1.3  88/12/27  14:38:38  korotaev
 * Теперь создает FIFO файлы сключом 'f'.
 *
 * Revision 1.2  88/10/13  00:03:13  dvolodin
 * Сделаны ediagи.
 *
 * Revision 1.1  88/05/03  19:27:10  root
 * Initial revision
 *
*/

# ifndef        lint
/* NOXSTR  */
static char     Rcs_id[] = "$Header: mknod.c,v 1.5 89/01/03 16:45:04 korotaev Exp $";
/* YESXSTR */
# endif         lint

#include <stdio.h>
#include <ediag.h>

main(argc, argv)
int argc;
char **argv;
{
	int m, a, b;

	if(argc != 5 && argc != 3) {
		fprintf( stderr, ediag("arg count\n","неверное число параметров\n") );
		goto usage;
	}
	if(*argv[2] == 'f'){
		m = 010666;
		a = b = 0;
	} else {
		if(*argv[2] == 'b')
			m = 060666; else
		if(*argv[2] == 'c')
			m = 020666; else
			goto usage;
		a = atoi(argv[3]);
		if(a < 0)
			goto usage;
		b = atoi(argv[4]);
		if(b < 0)
			goto usage;
	}
	if(mknod(argv[1], m, (a<<8)|b) < 0){
		fprintf(stderr,"%s: ",argv[0]);
		perror(argv[1]);
	}
	exit(0);

usage:
	fprintf(stderr, ediag("usage: %s name f/b/c [major minor]\n","вызов: %s имя f/b/c [major minor]\n"),argv[0]);
}
@


