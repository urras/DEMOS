1.4
log
@separate makefile
@
text
@#
# $Header: Makefile,v 1.3 89/05/18 15:12:26 ache Exp $
#
# Сборка интерпретатора Make для pdp11 без раздельного I/D
#
DEFS =-DVFORK -DEMSIGS \
      -Dstrchr=index -Dstrrchr=rindex -DEXTRULES # -DSMALL
CFLAGS = -O $(DEFS)
LDFLAGS = -i #-Q
LIBOVC=/lib/libovbasec.a
GET=co
GFLAGS=-q

ROOT=
INSDIR=$(ROOT)/bin
INSLIB=$(ROOT)/lib

SRC=main.c doname.c misc.c files.c \
	dosys.c dyndep.c rules.c gram.y

OBJS =  \
	main.o \
	doname.o \
	misc.o \
	files.o \
	dosys.o \
	dyndep.o \
	rules.o \
	gram.o

EXLIBS =strout.o

.c.o:
	$(CC) -E -C $(CFLAGS) $< | xstr -c -
	$(CC) -a -c $(CFLAGS) x.c
	-mv x.o $@@
	-rm -f x.c

.DEFAULT:
	$(GET) $(GFLAGS) $@@

all: make

install: i_make

# Если встроенные правила не выносятся в отдельный файл
# (нет -DEXTRULES), следующий кусок (до ######) надо убрать
all: make.rc

install: i_rules

make.rc: exrules
	exrules > $@@

exrules: rules.c defs exrules.c
	$(CC) -O exrules.c -o $@@

i_rules: make.rc
	cp make.rc $(INSLIB)

clobber::
	-rm -f make.rc exrules

CLRSRC::
	-rm -f exrules.c
######

src: defs $(SRC)

make: $(OBJS) xs.o $(EXLIBS)
	-mv $@@ $@@.old
	$(CC) -o $@@ $(LDFLAGS) $(OBJS) $(EXLIBS) xs.o
	size $@@
#        checkobj -40 $@@

gram.c rodata.c: gram.y _yyfix
	$(YACC) $(YFLAGS) gram.y
	_yyfix > rodata.c
	-rm -f y.tab.c

gram.o: gram.c rodata.c #_rofix
	$(CC) -a -S rodata.c
#        _rofix rodata.s
	$(CC) -E -C $(CFLAGS) gram.c | xstr -c -
	$(CC) -a -S -O x.c
	cat rodata.s >> x.s
	mv x.s gram.s
	$(CC) -a -c gram.s
	-rm -f x.c gram.s rodata.s

$(EXLIBS): $(LIBOVC)
	ar x $(LIBOVC) $@@

xs.o: xs.c #_rofix
	$(CC) -a -S xs.c
#        _rofix xs.s
	$(CC) -a -c xs.s
	-rm -f xs.s

xs.c: strings
	xstr

$(OBJS):  defs
main.o: main.c
doname.o: doname.c
misc.o: misc.c
files.o: files.c
dosys.o: dosys.c
dyndep.o: dyndep.c
rules.o: rules.c

i_make: make
	-mv $(INSDIR)/make $(INSDIR)/make.old
	cp make $(INSDIR)
	chmod 755 $(INSDIR)/make
	strip $(INSDIR)/make

clean:
	-rm -f $(OBJS) $(EXLIBS) xs.o *.b *.bak gram.c rodata.c xs.c x.c strings

clobber:: clean
	-rm -f make

CLRSRC:: clobber
	-rm -f $(SRC) defs _rofix _yyfix Makefile
@


