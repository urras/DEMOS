text
@#! /bin/sh
#
#  By KOI & FOX
#
: V data for -v, B flags, D dictionary, S stop, H history, F files, T temp
DICTE=/usr/lib/dict
DICTR=/usr/lib/dict
LIB=/usr/lib
V=/dev/null             B=                      F=
S=${DICTE}/hstop       H=/dev/null             T=/tmp/spell.$$
next="F=$F@@"
DER=/usr/bin/deroff
trap "rm -f $T ${T}a ; exit" 0
for A in $*
do
	case $A in
	-v)     B="$B@@-v"
		V=${T}a ;;
	-x)     B="$B@@-x" ;;
	-b)     D=${D-/usr/lib/dict/hlistb}
		DICTE=
		B="$B@@-b" ;;
	-d)     next="D="
		DICTE="";;
	-r)     next="R="
		DICTR="";;
	-s)     next="S=" ;;
	-h)     next="H=" ;;
	-n)     DER=/bin/cat;;
	-*)     echo "Bad flag for spell: $A"
		echo "Usage: spell [-v] [-b] [-r hlist] [-d hlist] [-s hstop] [-h spellhist]"
		exit ;;
	*)      eval $next"$A"
		next="F=$F@@" ;;
	esac
done
IFS=@@
case $H in
/dev/null)      ${DER} $F | tr -cs 'ю-чъЮ-Чa-zA-Z' '\012'|
		sort -u | ${LIB}/spell $S $T |
		${LIB}/spell ${DICTE}${D-/hlista} $V $B |
		${LIB}/spell ${DICTR}${R-/hlistr} /dev/null $B |
		sort -u +0f +0 - $T ;;
*)              who am i >> $H 2> /dev/null
		echo  '(' $F ')'  >> $H 2> /dev/null
		${DER} $F | tr -cs 'ю-чъЮ-Чa-zA-Z' '\012'|
		sort -u | ${LIB}/spell $S $T |
		${LIB}/spell ${DICTE}${D-/hlista} $V $B |
		${LIB}/spell ${DICTR}${R-/hlistr} /dev/null $B |
		sort -u +0f +0 - $T | tee -a $H ;;
esac
case $V in
/dev/null)      exit ;;
esac
sed '/^\./d' $V | sort -u +1f +0
@


