@#!/bin/sh
# $Header$
# $Log$
#
P=${1-`pwd`}
case x$MSG in
xr) echo "Файловая система от $P

$P" ;;
*)  echo "File System from $P

$P" ;;
esac
find $P -type d -print | awk '
BEGIN { FS="/"; first = -1 }
{
	if ( first == -1 ) {
		first = NF
		if (length ($NF)) first++
		next
	}
	str = " ";
	for (i = first; i < NF; i++)
		str = str "|    "
	print str "|-> " $NF
}'
@
