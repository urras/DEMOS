text
@#! /bin/sh
# $Header$
# $Log$
#
#         Постановка компонеты
#                       fox
cmd=/bin/mv
strip=""
chmod="/bin/chmod 755"
chown="/etc/chown  root"
chgrp="/etc/chgrp  sys"
while true ; do
	case $1 in
		-s )    strip="/bin/strip"
			shift
			;;
		-c )    cmd="/bin/cp"
			shift
			;;
		-m )    chmod="/bin/chmod $2"
			shift
			shift
			;;
		-o )    chown="/etc/chown $2"
			shift
			shift
			;;
		-g )    chgrp="/etc/chgrp $2"
			shift
			shift
			;;
		* )     break
			;;
	esac
done

RM=false
if [ $MSG = r ]
then RM=true
fi

if [ ! ${2-""} ]
then    if $RM
	then echo "install: Не указано место постановки"
	else echo "install: no destination specified"
	fi
	exit 1
fi
if [ ${3-""} ]
then    if $RM
	then   echo "install: Лишние имена файлов -> $*"
	else   echo "install: too many files specified -> $*"
	fi
	exit 1
fi
if [ $1 = $2 -o $2 = . ]
then    if $RM
	then  echo "install: Попытка переписать файл $1 в себя"
	else  echo "install: can't move $1 onto itself"
	fi
	exit 1
fi
if [ '!' -f $1 ]
then	echo "install: can't open $1"
	exit 1
fi
if [ -d $2 ]
then	file=$2/$1
else	file=$2
fi
/bin/rm -f $file
$cmd $1 $file
if [ $strip ]
then	$strip $file
fi
$chown $file
$chgrp $file
$chmod $file
@
