text
@d1 1
a1 1
/       $Header: fcrt0.s,v 1.2 86/05/17 09:43:48 dmitry Exp $
a6 3
/     *** empty log message ***
/
/     Revision 1.2  86/05/17  09:43:48  dmitry
d51 2
a52 4
	bicb    $40,(r2)
	cmpb    (r2),$'R
	beq     1f
	cmpb    (r2),$320       / Р
a53 1
1:
@


1.1
log
@Вставлена обработка MSG.
@
text
@d1 1
a1 1
/       $Header$
d5 13
a17 1
/       $Log$
d54 4
a57 1
	cmpb    (r2),$'r
d59 1
@


