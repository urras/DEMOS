@/ $Header$
/ $Log$
/ error = ftruncate(fildes, lenght);
/         off_t         lenght;         /* это long */

.globl  _ftruncate
.globl  cerror

_ftruncate:
	mov     r5,-(sp)
	mov     sp,r5
	mov     4(r5),r0
	mov     6(r5),0f
	mov     8(r5),0f+2
	sys     local; 9f
	bec     1f
	jmp     cerror
1:
	clr     r0
	mov     (sp)+,r5
	rts     pc
.data
9:
	sys     ftruncate; 0:..; ..
@
