@/*
 * $Header: semsys.c,v 1.1 89/03/04 20:06:50 abs Exp $
 * $Log:	semsys.c,v $
 * Revision 1.1  89/03/04  20:06:50  abs
 * Initial revision
 * 
 * Revision 1.1  89/03/04  20:02:03  abs
 * Initial revision
 * 
 *   интерфейс системных вызовов управления семафорами.
 *   общая часть находится в ../sys/semsys.s
 */
#include <sys/types.h>
#include <sys/sem.h>
#include <sys/ipc.h>

semget( key, count, flag )
	key_t key;
	int count;
	int flag;
{
	return semsys(1, key, count, flag);
}

semctl( id, count, cmd, flag )
	int id;
	unsigned int count;
	int cmd;
	union semunion {
		int val;
		struct semid_ds *semstat;
		u_short *array;
	}flag;

{
	return semsys(0, id, count, cmd, flag );
}

semop( id, oplist, count )
	int id;
	struct sembuf *oplist;
	unsigned int count;
{
	return semsys(2, id, oplist, count );
}
@


