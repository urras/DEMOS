@/*
 * $Header$
 * $Log$
 *
 */
#include        <stdio.h>

char *
fgetstr(s, n, iop)
char *s;
register FILE *iop;
{
	register c;
	register char *cs;

	cs = s;
	while (--n>0 && (c = getc(iop))>=0) {
		if (c =='\n')
			break;
		*cs++ = c;
	}
	if (c<0 && cs==s)
		return(NULL);
	*cs++ = '\0';
	return(s);
}
@
