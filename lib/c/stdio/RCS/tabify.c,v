@теперь работает с несколькими строками.
@
text
@/*
 * $Header: tabify.c,v 1.2 89/01/23 19:50:41 abs Exp $
 * $Log:        tabify.c,v $
 * Revision 1.2  89/01/23  19:50:41  abs
 * изменен смысл функции.
 *
 * Revision 1.1  88/04/01  16:14:32  andrew
 * Initial revision
 *
 */
#include       <stdio.h>

#define reg   register
#define put(c) (*dp++ = (c))

tabify(cp, dp)
reg char        *cp,*dp; {

	reg int         dcol, ocol;

	ocol = 0;
	dcol = 0;
	for (;;) {
		switch (*cp) {
		  case ' ':
			dcol++;
			break;
		  case '\t':
			dcol =+ 8;
			dcol =& ~07;
			break;
		  case '\n':
		  case '\r':
			dcol = ocol = 0;
			put( *cp );
			break;
		  default:
			while (((ocol + 8) &~ 07) <= dcol) {
				if (ocol + 1 == dcol)
					break;
				put('\t');
				ocol =+ 8;
				ocol =& ~07;
			}
			while (ocol < dcol) {
				put(' ');
				ocol++;
			}
			put(*cp);
			ocol++;
			dcol++;
			break;
		  case '\0':
			put('\0');
			return;
		}
		cp++;
	}
}
@


