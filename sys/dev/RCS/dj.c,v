#include "h/dj.h"
#if     NDJ > 0
#include <sys/param.h>
#include <sys/conf.h>
#include <sys/dir.h>
#include <sys/user.h>
#include <sys/tty.h>
#include "../include/djreg.h"

#define NDJLINE (NDJ*16)
struct  tty     dj11[NDJLINE];
int             ndj11 = NDJLINE;
struct  djdevice *dj_addr[NDJ];

/*ARGSUSED*/

djattach(addr, unit)
	struct djdevice *addr;
{
	if ( (unsigned)unit >= NDJ) return(0);
	dj_addr[unit] = addr;
	return(1);
}

djopen(dev, flag)
dev_t   dev;
{
	register d;
	register struct tty *tp;
	register struct djdevice *djaddr;
	extern  djstart();

	d = minor(dev);
	if (d >= NDJLINE) {
bad:
		u.u_error = ENXIO;
		return;
	}
	if ( (djaddr = dj_addr[d >> 4])==0) goto bad;
	tp = &dj11[d];
	if ((tp->t_state & XCLUDE) && (u.u_uid != 0)) {
		u.u_error = EBUSY;
		return;
	}
	tp->t_oproc = djstart;
	tp->t_iproc = NULL;
	tp->t_state |= WOPEN | CARR_ON;
	djaddr->djcsr |= DJ_TIE | DJ_MTSE | DJ_RIE | DJ_RE;
	if ((tp->t_state & ISOPEN) == 0) {
		ttychars(tp);
		tp->t_ispeed = B300;
		tp->t_ospeed = B300;
		tp->t_flags = ODDP | EVENP | RAW /* ECHO | LCASE | CRMOD */ ;
		tp->t_line = DFLT_LDISC;
	}
/*      (*linesw[tp->t_line].l_open)(dev, tp);  */
	ttyopen(dev, tp);
}

djclose(dev)
dev_t   dev;
{
	register struct tty *tp;

	tp = &dj11[minor(dev)];
	ttyclose(tp);
}

djread(dev)
dev_t   dev;
{
	register struct tty *tp;

	tp = &dj11[minor(dev)];
	(*linesw[tp->t_line].l_read)(tp);
}

djwrite(dev)
dev_t	dev;
{
	register struct tty *tp;

	tp = &dj11[minor(dev)];
	(*linesw[tp->t_line].l_write)(tp);
}

djioctl(dev, cmd, addr, flag)
dev_t	dev;
caddr_t	addr;
{
	register struct tty *tp;

	tp = &dj11[minor(dev)];
	switch (ttioctl(tp, cmd, addr, flag))	{
		case TIOCSETP:
		case TIOCSETN:
		case 0:
			break;
		default:
		u.u_error = ENOTTY;
	}
}

djrint(unit)
{
	register struct tty *tp;
	register struct djdevice *djaddr;
	register c;
	struct tty *tp0;

	djaddr = dj_addr[unit];
	tp0 = &dj11[unit << 4];
	while ((c = djaddr->djrbuf) < 0) {
		tp = tp0 + ((c >> 8) & 017);
		if (tp >= &dj11[NDJLINE])
			continue;
		if ((tp->t_state & ISOPEN) == 0) {
			wakeup((caddr_t) tp);
			continue;
		}
		if (c & DJRBUF_RDPE)
			if ((tp->t_flags & (EVENP | ODDP)) == EVENP ||
			   (tp->t_flags & (EVENP | ODDP)) == ODDP)
				continue;
		if (c & DJRBUF_FE)
			if (tp->t_flags & RAW)
				c = 0;
			else
				c = tun.t_intrc;
		(*linesw[tp->t_line].l_input)(c, tp);
	}
}

djxint(unit)
{
	register struct tty *tp, *tp0;
	register struct djdevice *djaddr;

	djaddr = dj_addr[unit];
	tp0 = &dj11[unit << 4];
	while (djaddr->djcsr < 0) {
		tp = &tp0[djaddr->dj_un.djtbufh];
		djaddr->dj_un.djtbufl = tp->t_char;
		tp->t_state &= ~BUSY;
		djstart(tp);
	}
}

djstart(tp)
register struct tty *tp;
{
	register struct djdevice *djaddr;
	register unit;
	int	c, s;
	extern	ttrstrt();

	unit = tp - dj11;
	djaddr = dj_addr[unit >> 4];
	unit = 1 << (unit & 017);
	s = spl5();
	if (tp->t_state & (TIMEOUT | BUSY)) {
		splx(s);
		return;
	}
	if (tp->t_state & TTSTOP) {
		djaddr->djtcr &= ~unit;
		splx(s);
		return;
	}
	if ((c = getc(&tp->t_outq)) >= 0) {
		if ((c >= 0200 && ((tp->t_flags & RAW) == 0))
		    && ((tp->t_lstate & L8BITS)==0) ) {
			djaddr->djtcr &= ~unit;
			tp->t_state |= TIMEOUT;
			timeout(ttrstrt, (caddr_t) tp, (c & 0177) + 6);
		} else
			{
			tp->t_char = c;
			tp->t_state |= BUSY;
			djaddr->djtcr |= unit;
		}
		if ((tp->t_outq.c_cc <= TTLOWAT(tp)) && (tp->t_state & ASLEEP)) {
			tp->t_state &= ~ASLEEP;
				wakeup((caddr_t) &tp->t_outq);
		}
		    	if (tp->t_wsel) {
		    		selwakeup(tp->t_wsel, tp->t_state & TS_WCOLL);
		    		tp->t_wsel = 0;
		    		tp->t_state &= ~TS_WCOLL;
		    	}
	} else
		djaddr->djtcr &= ~unit;
	splx(s);
}
#endif	NDJ
@


