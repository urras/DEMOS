wlrint(dev)
dev_t   dev;
{
	register short  c;
	register struct wldevice *addr;
	register struct tty *tp;

	tp = &wl11[minor(dev)];
	addr = (struct wldevice *) tp->t_addr;
	c = addr->wlrbuf;
	addr->wlcsr |= WL_RIE;
	(*linesw[tp->t_line].l_input)(c&0377, tp);
}
