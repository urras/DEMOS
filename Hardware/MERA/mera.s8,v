;  Некоторые предварительные действия перед вставкой (удалением) строки
;  b = относит. номеру последней (текущей) строки

INIT:       call  L0049 ; если на экране курсор, то восст. символ в тек. поз.


	    lda   119eh ; a = номеру начальной строки
	    add   b
	    call  L0034
	    mov   c,a   ; физический номер последней (текущ.) строки экрана

	    lda   119dh
	    mov   l,a
	    mvi   a,017h
	    sub   l     ; номер тек.строки
	    mov   b,a   ; количество пересылаемых строк
	    ret

; Вставка строки
  INSLIN:   mvi   b,017h
	    call  INIT
	    jz    CLEAR ; a=0, надо лишь очистить тек.строку

	    call  L0076 ; HL := адрес начала последней строки

	    dcx   h
	    call  CHECK  ; скорректировать hl при перех. через край экрана
	    push  h
	    lxi   d,0050h
	    dad   d
	    call  CHECK1
	    pop   d      ; hl - "to", de - "from"


;  пересылка

STLOOP:     mvi   c,050h ; число повторений внутр. цикла
SYMLP:      ldax  d
	    mov   m,a
	    dcx   h
	    dcx   d
	    dcr   c
	    jnz   SYMLP

	    call  CHECK
	    xchg
	    call  CHECK
	    xchg

	    dcr   b
	    jnz   STLOOP

;   очистка тек.строки

CLEAR:      lhld  119dh
	    mov   a,l
	    add   h
	    call  L0034
	    mov   c,a
	    jmp   FIN

CHECK:      mov   a,h
	    cpi   030h
	    rnc
	    push  d
	    lxi   d,0780h
	    dad   d
	    pop   d
	    ret

; Удаление строки

DELLIN:     lda   119dh
	    mov   b,a
	    call  INIT
	    jz    CLEAR1

	    call  L0076

	    push  h
	    lxi   d,0050h
	    dad   d
	    call  CHECK1
	    pop   d ;hl - "from", de - "to"


; пересылка

LNLP1:      mvi   c,050h
SYMLP1:     mov   a,m
	    stax  d
	    inx   h
	    inx   d
	    dcr   c
	    jnz   SYMLP1
	    call  CHECK1
	    xchg
	    call  CHECK1
	    xchg
	    dcr   b
	    jnz   LNLP1


CLEAR1:     lda   119eh
	    adi   017h
	    call  L0034
	    mov   c,a

FIN:        call   L0089
;            lhld   011a1h
;            mov    a,m
;            sta    011a0h
	    ret

CHECK1:     mov   a,h
	    cpi   037h
	    rc
	    mov   a,l
	    cpi   080h
	    rc
	    push  d
	    lxi   d,0f880h ; -780h
	    dad   d
	    pop   d
	    ret


; Некоторые предваритетельные действия при вставке/удалении символа

INITCH:     call  L0049
	    lda   119ch
	    mov   c,a
	    mvi   a,04fh ;79 - длина строки без 1
	    sub   c
	    mov   c,a    ; c = число пересылок
	    lhld  11a1h
	    ret

; Вставка символа

INSCH:      call  INITCH
	    rz
	    xra   a
	    mov   b,a   ; очистить b

	    dad   b     ; hl указывает на конец тек. строки
	    push  h
	    pop   d
	    dcx   d

; собственно перемещение
; c = счетчик цикла
; hl = указатель "to"
; de = указатель "from"

CLOOP:      ldax  d
	    mov   m,a
	    dcx   h
	    dcx   d
	    dcr   c
	    jnz   CLOOP

; пробел - в тек. позицию!
	    mvi   m,020h ; сейчас hl = тек. позиция
	    ret

; Удаление символа

DELCH:      call INITCH
	    jz   CHCLR  ;
	    push h
	    pop  d
	    inx  d      ; de = тек. позиция + 1

; пересылка, c = счетчик цикла
; hl = указатель "to"
; de = указатель "from"

CLOOP1:     ldax  d
	    mov   m,a
	    inx   h
	    inx   d
	    dcr   c
	    jnz   CLOOP1
CHCLR:      mvi   m,020h
	    ret

; Инициализация счетчика циклов для вывода ESC-последовательностей.
INICNT:     mvi   a,DNUM
	    sta   11c0h
	    ret

	    rst   7
